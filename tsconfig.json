{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "nodenext"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
